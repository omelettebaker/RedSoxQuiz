<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.charliej.yoon.redsoxquiz.EasyQuizActivity">

    <LinearLayout style="@style/quizPageLayout">

        <!-- Question 1: Uses horizontal radio group.  -->
        <TextView
            style="@style/quizQuestion.WithTopPadding"
            android:text="@string/easyQuestion1" />

        <RadioGroup
            android:id="@+id/easyAnswerGroup1"
            style="@style/answerGroupHorizontal">

            <RadioButton
                android:id="@+id/easyAnswer1A"
                style="@style/answerButtonHorizontal"
                android:text="@string/easyAnswer1A" />

            <RadioButton
                android:id="@+id/easyAnswer1B"
                style="@style/answerButtonHorizontal"
                android:text="@string/easyAnswer1B" />

            <RadioButton
                android:id="@+id/easyAnswer1C"
                style="@style/answerButtonHorizontal"
                android:text="@string/easyAnswer1C" />

            <RadioButton
                android:id="@+id/easyAnswer1D"
                style="@style/answerButtonHorizontal"
                android:text="@string/easyAnswer1D" />
        </RadioGroup>

        <View style="@style/divider" />

        <!-- Question 2: Uses vertical radio group. -->
        <TextView
            style="@style/quizQuestion"
            android:text="@string/easyQuestion2" />

        <RadioGroup
            android:id="@+id/easyAnswerGroup2"
            style="@style/answerGroupVertical">

            <RadioButton
                android:id="@+id/easyAnswer2A"
                style="@style/answerButtonVertical"
                android:text="@string/easyAnswer2A" />

            <RadioButton
                android:id="@+id/easyAnswer2B"
                style="@style/answerButtonVertical"
                android:text="@string/easyAnswer2B" />

            <RadioButton
                android:id="@+id/easyAnswer2C"
                style="@style/answerButtonVertical"
                android:text="@string/easyAnswer2C" />

            <RadioButton
                android:id="@+id/easyAnswer2D"
                style="@style/answerButtonVertical"
                android:text="@string/easyAnswer2D" />
        </RadioGroup>

        <View style="@style/divider" />

        <!--Question 3: Uses horizontal radio group. -->

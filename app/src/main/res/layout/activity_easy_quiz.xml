                android:text="@string/easyAnswer6A" />

            <CheckBox
                android:id="@+id/easyAnswer6B"
                style="@style/answerButtonVertical"
                android:text="@string/easyAnswer6B" />

            <CheckBox
                android:id="@+id/easyAnswer6C"
                style="@style/answerButtonVertical"

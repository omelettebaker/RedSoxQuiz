            style="@style/quizQuestion"
            android:text="@string/easyQuestion3" />

        <RadioGroup
            android:id="@+id/easyAnswerGroup3"
            style="@style/answerGroupHorizontal">

            <RadioButton
                android:id="@+id/easyAnswer3A"
                style="@style/answerButtonHorizontal"
                android:text="@string/easyAnswer3A" />

            <RadioButton
                android:id="@+id/easyAnswer3B"
                style="@style/answerButtonHorizontal"
                android:text="@string/easyAnswer3B" />
        </RadioGroup>

        <View style="@style/divider" />


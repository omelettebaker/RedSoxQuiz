            <RadioButton
                android:id="@+id/easyAnswer10D"
                style="@style/answerButtonVertical"
                android:text="@string/easyAnswer10D" />
        </RadioGroup>

        <!-- Button to submit answers. -->
        <Button
            style="@style/buttonStyleQuizPage"
            android:onClick="submitTest"
            android:text="@string/submitButton" />

        <!-- Button to reset quiz and clear all the answers.-->
        <Button
            style="@style/buttonStyleQuizPage"
            android:layout_marginBottom="@dimen/quizButtonVerticalMargin"
            android:onClick="reset"
            android:text="@string/resetButton" />


    </LinearLayout>

</ScrollView>

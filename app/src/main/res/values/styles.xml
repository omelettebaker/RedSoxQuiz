<resources>

    <!-- Theme for the intro page, which has no Action Bar. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for Quiz pages, which has Action Bar and back arrow. -->
    <style name="introBackground">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/intro</item>
    </style>
    <!-- Style for the quiz page.  This is the LinearLayout view inside the ScrollView. -->
    <style name="quizPageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/quizPagePadding</item>
        <item name="android:paddingRight">@dimen/quizPagePadding</item>
    </style>

    <!-- Style for buttons on the intro page. -->
    <style name="buttonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/introButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:paddingLeft">@dimen/introButtonPadding</item>
        <!--<item name="android:paddingStart">@dimen/introButtonPadding</item>-->
        <item name="android:paddingRight">@dimen/introButtonPadding</item>
        <!--<item name="android:paddingEnd">@dimen/introButtonPadding</item>-->
    </style>

    <!-- Child of "buttonStyle"; Has same attributes as above, but with added top margin
    to have some space between buttons on the intro page when in portrait mode.-->
    <style name="buttonStyle.WithTopMargin" parent="buttonStyle">
        <item name="android:layout_marginTop">@dimen/introButtonSpacing</item>
    </style>

    <!-- Child of "buttonStyle"; Has same attributes as above, but with added top margin
    to have some space between buttons on the intro page when in landscape mode.-->
    <style name="buttonStyleLandscape.WithTopMargin" parent="buttonStyle">
        <item name="android:layout_marginTop">@dimen/introButtonLandscapeSpacing</item>
    </style>


    <!-- Style for buttons on the intro page. -->
    <style name="buttonLandscapeStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/introButtonTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:paddingLeft">@dimen/introButtonPadding</item>
        <!--<item name="android:paddingStart">@dimen/introButtonPadding</item>-->
        <item name="android:paddingRight">@dimen/introButtonPadding</item>
        <!--<item name="android:paddingEnd">@dimen/introButtonPadding</item>-->
    </style>


    <!-- Style for buttons on the quiz pages. -->
    <style name="buttonStyleQuizPage">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/quizButtonVerticalMargin</item>
        <item name="android:layout_marginLeft">@dimen/quizButtonHorizontalMargin</item>
        <!--<item name="android:layout_marginStart">@dimen/quizButtonHorizontalMargin</item>-->
        <item name="android:layout_marginRight">@dimen/quizButtonHorizontalMargin</item>
        <!--<item name="android:layout_marginEnd">@dimen/quizButtonHorizontalMargin</item>-->
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/quizButtonTextSize</item>
    </style>

    <!-- Style for linear layout of buttons on the intro page. -->
    <style name="buttonsPosition">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/introButtonPortraitTopMargin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for vertical linear layout of buttons on the intro page. -->
    <style name="buttonsPositionLandscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/introButtonLandscapeTopMargin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for radio buttons that align horizontally. -->
    <style name="answerButtonHorizontal">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@dimen/layout_weight</item>
    </style>

    <!-- Style for the radio group that has horizontal orientation. -->
    <style name="answerGroupHorizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for radio buttons that are aligned vertically -->
    <style name="answerButtonVertical">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for radio group that has vertical orientation. -->
    <style name="answerGroupVertical">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Dividing line between questions. -->
    <style name="divider">
        <item name="android:layout_marginBottom">@dimen/dividerLineVerticalMargin</item>
        <item name="android:layout_marginTop">@dimen/dividerLineVerticalMargin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividerLineHeight</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!--Style for quiz questions. -->
    <style name="quizQuestion">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:paddingBottom">@dimen/quizQuestionVerticalPadding</item>
    </style>

    <!-- Style for the first question so there is padding above question. Child of quizQuestion
            Style. -->
    <style name="quizQuestion.WithTopPadding" parent="quizQuestion">
        <item name="android:paddingTop">@dimen/quizQuestionVerticalPadding</item>
    </style>


</resources>
